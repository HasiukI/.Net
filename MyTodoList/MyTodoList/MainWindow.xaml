<Window x:Class="MyTodoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTodoList"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Border x:Name="mainMenuMinimazation" MouseLeftButtonUp="mainMenuMinimazation_MouseLeftButtonUp" BorderBrush="Black" BorderThickness="1" Height="20" Width="20" Margin="5,5,5,5">
                <TextBlock HorizontalAlignment="Center" Height="7"  TextWrapping="Wrap" Text="Hide" VerticalAlignment="Center" Width="13" FontSize="6"/>
            </Border>
            <Border x:Name="mainMenuClose" BorderBrush="Black" MouseLeftButtonUp="mainMenuClose_MouseLeftButtonUp" BorderThickness="1" Height="20" Width="20" Margin="5,5,5,5">
                <TextBlock HorizontalAlignment="Center" Height="8"  TextWrapping="Wrap" Text="X" VerticalAlignment="Center" Width="4" FontSize="6"/>
            </Border>
        </StackPanel>




    </Grid>
</Window>
